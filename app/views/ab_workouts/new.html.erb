<h1>Add an ab workout</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @ab_workout, local: true) do |f| %>

      <%= f.label :duration %>
      <%= f.number_field :duration, class: 'form-control' %> <br>

      <%= f.submit "Log Ab Workout", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>