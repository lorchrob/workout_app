<% provide(:title, "Log") %>
<h1>Exercise Log</h1>
<h3>Runs</h3>
<table class="table table-custom">
  <thead>
      <th scope="col">Date</th>
      <th scope="col">Length</th>
      <th scope="col">Duration (minutes)</th>
      <th scope="col">Delete</th>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.date %></td> 
        <td><%= run.length %></td> 
        <td><%= run.duration %></td>
        <td><%= button_to "Delete this entry", { controller: "runs", action: "destroy", id: run.id }, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

