<h1>Add an exercise (for now, a run)</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @run, local: true) do |f| %>
      <%= f.label :length %>
      <%= f.number_field :length, class: 'form-control' %>

      <%= f.label :duration %>
      <%= f.number_field :duration, class: 'form-control' %> <br>

      <%= f.submit "Log Run", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>